<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelLayout" parent="RoundLabelView">
        <attr name="llChooseMode">
            <enum name="none" value="0"/>
            <enum name="single" value="1"/>
            <enum name="multi" value="2"/>
        </attr>
        <!-- 能够被选中标签的数量，仅在llChooseMode=multi多选模式下才有效 -->
        <attr name="llMaxChoiceNum" format="integer"/>
        <!-- 要添加的标签，以"|"进行分割 -->
        <attr name="llLabels" format="string"/>
        <!-- 要添加的标签，String array,优先级低于llLabels -->
        <attr name="llLabelsArray" format="reference"/>
        <attr name="llDefaultPaddingHorizontal" format="dimension" />
        <attr name="llDefaultPaddingVertical" format="dimension" />
        <!--        <attr name="llDefaultBackgroundColor" format="color" />-->
    </declare-styleable>

    <declare-styleable name="RoundLabelView">
        <!-- 设置背景圆角弧度 -->
        <attr name="rlvRoundRadius" format="dimension" />
        <!-- 设置描边颜色 -->
        <attr name="rlvRoundStrokeColor" format="color" />
        <!-- 设置描边宽度 -->
        <attr name="rlvRoundStrokeWidth" format="dimension" />
        <!-- 文字 -->
        <attr name="rlvText" format="string" />
        <!-- 文字大小 -->
        <attr name="rlvTextSize" format="dimension" />
        <!-- 文字颜色 -->
        <attr name="rlvTextColor" format="color" />
        <!-- 设置背景颜色 -->
        <attr name="rlvBackgroundColor" format="color" />
    </declare-styleable>
</resources>
